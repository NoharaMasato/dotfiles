{
    "C_Cpp.updateChannel": "Insiders",
    "terminal.integrated.shellArgs.linux": ["-l"],
    "editor.snippetSuggestions": "top",

    // indent
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": true,

    // vim
    "vim.easymotion": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindings": [
        {
            "before": ["<leader>","l"],
            "after": ["$"]
        },
        {
            "before": ["<leader>","h"],
            "after": ["^"]
        },
        {
            "before": ["<leader>","w"],
            "commands": [":w"]
        },
        {
            "before": ["<Esc>","<Esc>"],
            "commands": [":nohl"]
        }
    ],
    "window.zoomLevel": 0
}